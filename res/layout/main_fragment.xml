<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/colorPrimary"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/ios_style_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ios"/>

    <Button
        android:id="@+id/edge_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Speed factor"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/speed_factor_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1x"/>

        <Button
            android:id="@+id/speed_factor_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2x"/>

        <Button
            android:id="@+id/speed_factor_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3x"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="iOS offset"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ios_offset_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1x"/>

        <Button
            android:id="@+id/ios_offset_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2x"/>

        <Button
            android:id="@+id/ios_offset_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5x"/>
    </LinearLayout>
</LinearLayout>